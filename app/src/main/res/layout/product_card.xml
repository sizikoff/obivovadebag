<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView android:id="@+id/cardView"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="7dp"
    android:layout_margin="7dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/item_selected"
            android:padding="5dp">

            <ImageView
                card_view:layout_constraintTop_toTopOf="parent"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/imageInProductCard"
                card_view:layout_constraintLeft_toLeftOf="parent"
                android:background="@drawable/item_selected"/>

            <TextView
                android:id="@+id/productNameInProductCard"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:maxLines="3"
                android:inputType="textMultiLine"
                android:text="название товара"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="15dp"
                card_view:layout_constraintLeft_toRightOf="@+id/imageInProductCard"
                card_view:layout_constraintRight_toRightOf="parent" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

